<Window x:Class="ParentalControl.TimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParentalControl"
        mc:Ignorable="d"
        Title="TimerWindow" Height="200" Width="480">
    <StackPanel>
        <TextBlock Text="Time left:" TextAlignment="Center" FontSize="50"/>
        <TextBox Text="{Binding TimeLeft}" x:Name="TimerBox" TextChanged="TimerBox_TextChanged" TextAlignment="Center" FontSize="50"/>
    </StackPanel>
</Window>
