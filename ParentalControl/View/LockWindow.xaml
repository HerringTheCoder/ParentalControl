<Window x:Class="ParentalControl.LockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParentalControl"
        mc:Ignorable="d"
        Title="LockWindow" Height="200" Width="600" WindowStyle="None">
    <StackPanel>
        <TextBlock Text="You have been blocked, because this app assumes life is not fun at all. However, there is a way out of this situation. Should I share this secret with you?" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
        <Separator/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="SecretButton" Click="SecretButton_Click" Content="I want to know the truth" Grid.Column="0"  Width="150" Height="40" Margin="20"/>
        <Button x:Name="NoSecretButton" Click="NoSecretButton_Click" Content="I want to live in ignorance" Grid.Column="1" Width=" 150" Height="40" Margin="20"/>
        </Grid>
    </StackPanel>
</Window>
